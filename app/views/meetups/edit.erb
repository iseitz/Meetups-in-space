<h1>Edit <%= @meetup.title %></h1>

  <% if @errors %>
    <h4> Errors: </h4>
    <ul>
      <% @errors.each do |error| %>
    <li>  <%= error %> </li>
      <% end %>
    </ul>
  <% end %>

  <form id="add_meetup" action="/meetups/edit/:id" method="post">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="meetup[title]" value="<%= @meetup.title %>">
    </div>

    <div>
      <label for="theme">Theme:</label>
      <select id="theme" name="meetup[theme]">
        <% Meetup::THEMES.each do |theme| %>
          <% if @meetup.theme == theme %>
            <option selected><%= theme %></option>
          <% else %>
            <option><%= theme %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div>
      <label for="date">Date:</label>
      <input type="date" id="date" min="<%=DateTime.now + 1.day %>" max="<%=DateTime.now + 2.year %>" name="meetup[date]" value="<%= @meetup.date %>">
    </div>

    <div>
      <label for="begin_time">Begins at:</label>
      <input type="time" id="begin_time" name="meetup[begin_time]" value="<%= @meetup.begin_time %>">
    </div>

    <div>
      <label for="end_time">Ends at:</label>
      <input type="time" id="end_time" name="meetup[end_time]" value="<%= @meetup.end_time %>">
    </div>

    <div>
      <label for="location">Location:</label>
      <input type="text" id="location" name="meetup[location]" value="<%= @meetup.location %>">
    </div>

    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="meetup[description]" value="<%= @meetup.description %>"></textarea>
    </div>

    <input type="submit" value="Create Meetup">
  </form>

  <a href="/meetups">Back to all meetups</a>
